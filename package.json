{
  "name": "shellmind",
  "version": "0.1.3",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:server": "tsc -p tsconfig.server.build.json",
    "build:electron": "tsc -p tsconfig.electron.json",
    "electron:dev": "npm run build:electron && concurrently \"npm run dev\" \"npm run server\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "dist": "npm run build && npm run build:server && npm run build:electron && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "nodemon --exec ts-node --project tsconfig.server.json server.ts",
    "start": "concurrently \"npm run server\" \"npm run dev\""
  },
  "build": {
    "appId": "com.shellmind.app",
    "productName": "ShellMind",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "dist-server/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "shellmind.db",
        "to": "shellmind.db",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "basic-ftp": "^5.0.5",
    "clsx": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "lucide-react": "^0.309.0",
    "react": "^18",
    "react-dom": "^18",
    "react-markdown": "^10.1.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "sqlite3": "^5.1.7",
    "ssh2": "^1.15.0",
    "tailwind-merge": "^2.2.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-webgl": "^0.16.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/cors": "^2.8.19",
    "@types/electron": "^1.4.38",
    "@types/express": "^5.0.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ssh2": "^1.11.19",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.0.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^8",
    "nodemon": "^3.1.11",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}